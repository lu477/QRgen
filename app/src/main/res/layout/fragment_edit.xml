<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editFragment"
    android:background="@color/color_main">

    <EditText
        android:id="@+id/et_edit_art"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Edit Article"
        android:textSize="20dp"
        android:textColor="@color/color_four"
        android:textAlignment="center"
        />
    <EditText
        android:id="@+id/et_edit_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Edit Article"
        android:textSize="20dp"
        android:textColor="@color/color_four"
        android:textAlignment="center"
        />
    <EditText
        android:id="@+id/et_edit_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:text="Edit Article"
        android:textSize="20dp"
        android:textColor="@color/color_four"
        android:textAlignment="center"
        />
    <EditText
        android:id="@+id/et_edit_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="Edit Article"
        android:textSize="20dp"
        android:textColor="@color/color_four"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="230dp"
        android:background="@color/color_five"
        android:text="Save"
        android:textSize="14sp"
        app:backgroundTint="@color/color_three"/>

    <ImageView
        android:id="@+id/imageViewQr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="290dp"
        android:background="@color/color_three"
        tools:src="@android:drawable/ic_menu_close_clear_cancel" />

    <Button
        android:id="@+id/buttonGen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="470dp"
        android:background="@color/color_five"
        android:text="Generate"
        android:textAlignment="center"
        android:textSize="14sp"
        app:backgroundTint="@color/color_three"/>


    <Button
        android:id="@+id/btn_print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="530dp"
        android:background="@color/color_five"
        android:text="Print"
        android:textAlignment="center"
        android:textSize="14sp"
        app:backgroundTint="@color/color_three"/>

</FrameLayout>