<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editFragment"
    android:background="@color/color_main">

    <TextView
        android:id="@+id/tv_edit_art"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:textColor="@color/color_four"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/buttonGen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:background="@color/color_five"
        android:text="Generate"
        android:textAlignment="center"
        android:textSize="20dp"
        app:backgroundTint="@color/color_three" />

    <ImageView
        android:id="@+id/imageViewQr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:background="@color/color_three"
        tools:src="@android:drawable/ic_menu_close_clear_cancel" />

</FrameLayout>